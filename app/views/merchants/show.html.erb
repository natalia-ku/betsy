<section>
  <h2 class="text-center">Merchant details:</h2>
  <p>Username: <%=@merchant.username%></p>
  <p>Email: <%=@merchant.email%></p>
  <p>Merchant id: <%=@merchant.id%></p>
  <p> Total Revenue: $<%= '%.2f' %(@merchant.total_revenue) %></p>
</section>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @merchant.my_orders.each do |order| %>
    <tr>
      <td><%= link_to "Order ##{order.id}", merchant_order_view_path(@merchant, order.id) %></td>
      <td><%= order.paid_at.strftime("%b %d, %Y at %I:%M %P") %></td>
      <td><%= order.status.capitalize %></td>


      <% if (order.status == "paid" || order.status == "pending") %>
      <% if order.merchant_shipping_required?(@merchant.id) %>
      <td><%= button_to "Some products require shipping", merchant_order_view_path(@merchant.id, order.id), method: :get %></td>
      <% end %>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>
<section>
  <%= button_to "My products", merchant_products_path(@merchant.id), method: :get %>
  <%= button_to "Add a new product", new_merchant_product_path(@merchant), method: :get%>
  <%= button_to "All Categories", categories_path, method: :get%>
  <%= button_to "New Category", new_category_path, :method => :get%>


</section>
