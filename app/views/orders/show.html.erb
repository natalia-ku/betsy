<section>
  <h1>Order show page:</h1>
      <h2>Order <%=@order.id%></h2>
      <p>Order date and time:<%=@order.paid_at%></p>
      <p>Email:<%=@order.email%> </p>
      <p>Credit card number:<%=@order.credit_card%> </p>
      <p>Order status:<%=@order.status%> </p>
      <%if @order.status != "shipped"  && @order.status != "cancelled"%>
        <%= link_to "Cancel order", cancel_order_path(@order.id), method: :put%>
      <%end%>
      <p>Order total $:<%=@order.total_price%> </p>
      <h3>Order products: </h3>
      <table>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
        <%@order.products.each do |pr|%>
          <tr>
            <td><%=link_to pr.name, product_path(pr.id)%></td>
            <td><%=OrderProduct.find_by(product_id: pr.id, order_id: @order.id).quantity%></td>
            <td><%=OrderProduct.find_by(product_id: pr.id, order_id: @order.id).subtotal%></td>
          </tr>
        <%end%>
      </table>
</section>
