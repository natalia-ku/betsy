<h2>Check out all the OWLY goodness!</h2>

<% if params[:merchant_id] && @products.empty? %>
 <h4>
   <%= "Currently, #{Merchant.find(params[:merchant_id]).username } does not have any products."%> </h4>
 <% end %>

<% @products.each do |product|%>
  <%= link_to product.name, product_path(product) %>
  <%= image_tag product.photo_url, alt:"picture of #{product.name}"%>
  <% end %>
